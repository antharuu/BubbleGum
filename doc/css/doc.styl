@require "../../css/bubblegum/configs/_configuration.styl"
@require "../../css/bubblegum/configs/_variables.styl"
@require "../../css/bubblegum/core/_functions.styl"
@require "../../css/bubblegum/core/_mixins.styl"

html
  scroll-behavior smooth

h1
  small
    font-size .4em

small
  opacity .8
  margin-left .6em
  font-size .5em

  small
    font-size .8em

hr
  margin: 2em auto

h5
  .install-icon
    width 1.2em
    float left
    position relative
    top 0.3em
    opacity: .9
    margin-right 0.3em
    fill $Colors.theme.dark !important


.title
  font-size 6em

.card
  overflow hidden

  .section-title
    position relative
    display inline-block

    &:before
      overflow hidden
      content ''
      position absolute
      height 5px
      left calc(100% + .5em)
      bottom .6em
      width 100vw
      background-color $Colors.base.pink;
      border-radius 5px

  h5
    color: $Colors.theme.dark !important
    padding-top .5em !important

    &:first-child
      color: $Colors.theme.dark !important

#sidenav
  position fixed;
  right 0
  top 0
  height 100vh
  width 5vw
  display flex
  flex-direction column
  justify-content space-around
  align-items end

  &:hover
    width: 10vw

    > a
      right -5vw

    > a:before
      right -5vw
      background-color $Colors.theme.dark
      opacity 1

  a
    right 0
    display block
    color transparent
    width 5vw
    height 3vw
    border-radius 500px 0 0 500px
    background-color $Colors.theme.light
    transition all .5s ease-in-out
    position relative
    shadow-values()

  a:hover
    background-color $Colors.theme.dark
    box-shadow none

  a:before
    text-transform: uppercase;
    transition all .5s ease-in-out
    position: absolute;
    content attr(title)
    right -50vw
    padding 0 5em 0 1em
    background-color $Colors.theme.dark
    height 100%
    width: 15vw
    top -4px
    font-size .8em
    color $Colors.theme.light
    line-height 2.8vw
    border-radius 500px 0 0 500px
    font-weight: bold;
    border 4px solid $Colors.base.pink

  a:hover:before
    right -4px
    background-color $Colors.theme.dark


@media screen and (max-width: 740px)
  h1
    font-size 4em !important

  pre
    font-size 2em !important

  #sidenav
    display: none;

@media screen and (max-width: 520px)
  h1
    font-size calc(2em) !important

  pre
    font-size 2em !important

  #sidenav
    display: none;